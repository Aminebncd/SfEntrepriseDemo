{% extends 'base.html.twig' %}

{% block title %}Détails d'un employé{% endblock %}

{% block body %}
    <h1>Détails d'un employé</h1>

    <h2>{{employe}}</h2>

    
    <p> 
        Entreprise : <a href="{{ path('show_entreprise', {'id': employe.entreprise.id}) }}">{{employe.entreprise}}</a><br>
        Ville : {% if employe.ville %} {{employe.ville}} {% else %}non renseignée{% endif %} <br>
        Age : {% if employe.dateNaissance %}{{employe.age}} ans {% else %}non renseigné{% endif %} <br>
        Date d'embauche : {{employe.dateEmbauche | date("d.m.Y")}}
    </p>



{% endblock %}
