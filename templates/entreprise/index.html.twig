{% extends 'base.html.twig' %}

{% block title %}Liste des entreprises{% endblock %}

{% block body %}
    <h1> Liste des entreprises</h1>

    {% if entreprises %}
      {% for entreprise in entreprises %}
         <a href="{{ path('show_entreprise', {'id': entreprise.id}) }}">{{ entreprise}}</a>

         <a class="btn btn-warning btn-sm" href="{{ path('edit_entreprise', {'id' : entreprise.id}) }}">edit</a>

         <a class="btn btn-danger btn-sm" href="{{ path('delete_entreprise', {'id' : entreprise.id}) }}">delete</a>
         
         <br>
      {% endfor %}
   
    {% else %}
      <p>Il semblerait qu'aucune entreprise ne soit renseignée en base de données.</p>
    {% endif %}



{% endblock %}
